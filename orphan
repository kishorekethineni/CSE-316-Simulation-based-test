#include<stdio.h>
#include<sys/types.h>
#include<unistd.h>
int main()
{
	pid_t p;
	p=fork();
	if (p==0)
	{
		wait(20);//parent
		exit(0);
	}
	else
	{
		int n;
		printf("***this is child process***\n")
		printf("enter a no=\n");
		scanf("%d",&n);
		while(n>0)
	   {
	   	n=n/2;
	   	if(n>0)
	   	{
	   	printf("%d\n",n);	
		}
	   }
		
	}
}
